<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Alert dialog box style-->
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#004D40</item>   <!-- Header/ Titlle-->
        <item name="android:textColorPrimary">#B71C1C</item> <!-- Content -->
        <item name="android:colorAccent">#B71C1C</item>  <!-- Buttons yes or no -->
        <item name="windowMinWidthMajor">900dp</item>
        <item name="windowMinWidthMinor">800dp</item>
    </style>

</resources>