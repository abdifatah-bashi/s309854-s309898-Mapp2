<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="@android:color/background_light"
    tools:background="#e2efd2">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="500dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Restauranter -->
    <Button
        android:id="@+id/restaurant"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/restaurant"
        android:onClick="byyTilRestaurantAktivitet"
        android:tag="+" />

    <!-- Venner-->
    <Button
        android:id="@+id/venner"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/restaurant"
        android:layout_marginEnd="48dp"
        android:background="@drawable/freinds"
        android:onClick="byttTilVennAktivitet"
        android:tag="-" />

    <!-- Bestilling -->
    <Button
        android:id="@+id/bestilling"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/restaurant"
        android:background="@drawable/order"
        android:onClick="byttTilBestillingAktivitet"
        android:tag="/" />


    <!-- Instilling -->
    <Button
        android:id="@+id/instilling"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/venner"
        android:layout_below="@+id/restaurant"
        android:background="@drawable/setting"
        android:onClick="byttTilInstillingAktivitet"
        android:tag="*" />



</RelativeLayout>