<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="#d0b47c"
    tools:background="#e2efd2">


    <ImageView
        android:id="@+id/cover"
        android:layout_width="500dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="166dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Restauranter -->
    <Button
        android:id="@+id/restaurant"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignStart="@+id/bestilling"
        android:background="@drawable/restaurantt"
        android:onClick="byttTilRestaurantAktivitet"
        android:tag="+" />

    <!-- Venner-->
    <Button
        android:id="@+id/venner"
        android:layout_width="140dp"
        android:layout_height="147dp"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignStart="@+id/instilling"
        android:background="@drawable/venner"
        android:onClick="byttTilVennAktivitet"
        android:tag="-" />

    <!-- Bestilling -->
    <Button
        android:id="@+id/bestilling"
        android:layout_width="140dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/instilling"
        android:layout_marginStart="34dp"
        android:background="@drawable/ordre"
        android:onClick="byttTilBestillingAktivitet"
        android:tag="/" />


    <!-- Instilling -->
    <Button
        android:id="@+id/instilling"
        android:layout_width="140dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="61dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/settingss"
        android:onClick="byttTilInstillingAktivitet"
        android:tag="*" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/restback" />


</RelativeLayout>