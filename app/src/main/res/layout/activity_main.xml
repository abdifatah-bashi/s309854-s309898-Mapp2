<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="@android:color/background_light"
    tools:background="#e2efd2">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="500dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Pluss -->
    <Button
        android:id="@+id/restaurant"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:layout_marginStart="58dp"
        android:background="@drawable/restaurant"
        android:onClick="byyTilRestaurantAktivitet"
        android:tag="+" />

    <!-- Minus -->
    <Button
        android:id="@+id/friends"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/restaurant"
        android:layout_marginEnd="48dp"
        android:background="@drawable/freinds"
        android:onClick="byttTilVennAktivitet"
        android:tag="-" />

    <!-- Dele -->
    <Button
        android:id="@+id/message"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/restaurant"
        android:layout_marginStart="66dp"
        android:background="@drawable/message"
        android:onClick="changeToGameView"
        android:tag="/" />


    <!-- Gange -->
    <Button
        android:id="@+id/setting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/friends"
        android:layout_below="@+id/restaurant"
        android:background="@drawable/setting"
        android:onClick="changeToGameView"
        android:tag="*" />



</RelativeLayout>